{
  "info": {
    "name": "PingUp API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000/api",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "User Management",
      "item": [
        {
          "name": "Get User Data",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/user/data",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ]
          }
        },
        {
          "name": "Update User Profile",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/user/update",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "profile",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "cover",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "bio",
                  "value": "Updated bio",
                  "type": "text"
                },
                {
                  "key": "location",
                  "value": "New Location",
                  "type": "text"
                }
              ]
            }
          }
        },
        {
          "name": "Discover Users",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/user/discover",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "Social Connections",
      "item": [
        {
          "name": "Follow User",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/user/follow",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"target_user_id\"\n}"
            }
          }
        },
        {
          "name": "Unfollow User",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/user/unfollow",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"target_user_id\"\n}"
            }
          }
        },
        {
          "name": "Send Connection Request",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/user/connect",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"target_user_id\"\n}"
            }
          }
        },
        {
          "name": "Accept Connection Request",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/user/accept",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"requester_user_id\"\n}"
            }
          }
        },
        {
          "name": "Get User Connections",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/user/connections",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "Posts",
      "item": [
        {
          "name": "Create New Post",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/post/add",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "content",
                  "value": "Post content here",
                  "type": "text"
                },
                {
                  "key": "images",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "post_type",
                  "value": "text_with_image",
                  "type": "text"
                }
              ]
            }
          }
        },
        {
          "name": "Get Feed Posts",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/post/feed",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ]
          }
        },
        {
          "name": "Like Post",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/post/like",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"postId\": \"post_id_here\"\n}"
            }
          }
        }
      ]
    }
  ]
}
